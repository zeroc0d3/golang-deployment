{
    "taskDefinitionArn": "arn:aws:ecs:${Secrets.AWS_REGION}:${Secrets.AWS_ACCOUNT_ID}:task-definition/bookstore-ecs-task-def:1",
    "containerDefinitions": [
        {
            "name": "codecatalyst-ecs-container",
            "image": "${Secrets.AWS_ACCOUNT_ID}.dkr.ecr.${Secrets.AWS_REGION}.amazonaws.com/devopscorner/bookstore-codecatalyst:alpine",
            "cpu": 0,
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 8080,
                    "protocol": "tcp",
                    "containerPort": 8080
